<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/movCardView"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:clickable="true"
        android:id="@+id/cv_layout">
        <ImageView
            android:contentDescription="@string/Movie_Not_Found"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:paddingRight="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/movie_photo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_name"
            android:layout_toRightOf="@+id/movie_photo"
            android:layout_alignParentTop="true"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/release_date"
            android:layout_toRightOf="@+id/movie_photo"
            android:layout_below="@+id/movie_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_details"
            android:layout_toRightOf="@+id/movie_photo"
            android:layout_below="@+id/release_date"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/mov_rating"
            android:layout_below="@+id/movie_details"
            android:layout_toRightOf="@+id/movie_photo"
            android:isIndicator="true"
            android:numStars="5"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>